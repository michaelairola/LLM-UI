<div class="d-flex flex-column theme-border-end position-relative" style="height: calc(-200px + 100vh); min-width: 200px; ">
    <div class="resizer position-absolute top-0 end-0 bottom-0 h-100" style="cursor: col-resize; width: 5px;"></div>
    <div class="d-flex flex-column h-100">
        <div class="flex-grow-1 overflow-auto">
            <div class="h-100">
                <div class="fw-bold m-2 px-2 small cursor-pointer d-flex align-items-center">
                    <span class="ms-2">Previous Chats</span>
                </div>
                <div>
                    <% @messages.each do |m| %>
                    <div>
                        <div class="d-flex mb-3 justify-content-end">
                            <div class="py-2 theme-bg-secondary rounded px-3" style="max-width: 90%;">
                                <%= simple_format(m[0]) %>
                            </div>
                        </div>
                        <div class="d-flex mb-3 w-100">
                            <div class="w-100">
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="fw-bold">Assistant</div>
                                    <div class="theme-text-secondary">7/3/2025, 4:50:00 PM</div>
                                </div>
                                <div class="overflow-auto position-relative" style="overflow-wrap: break-word;">
                                    <p>
                                    <%= simple_format(m[1]) %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>



