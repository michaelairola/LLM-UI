<div class="d-flex flex-column theme-border-end position-relative" style="height: calc(-50px + 100vh); min-width: 200px; width: 325px; max-width: 600px;">
    <div class="resizer position-absolute top-0 end-0 bottom-0 h-100" style="cursor: col-resize; width: 5px;"></div>
        <div class="d-flex flex-column h-100">
            <div class="flex-grow-1 overflow-auto">
                <div class="h-100">
                    <div class="fw-bold m-2 px-2 small cursor-pointer d-flex align-items-center">
                        <span class="ms-2">Previous Chats</span>
                    </div>
                <div>
                    <% @chats.each do |chat| %>
                        <div class="d-flex gap-3 justify-content-between mx-1 px-2">
                            <div class="text-truncate flex-grow-1 rounded px-2 py-1 d-flex align-items-center cursor-pointer">
                            <%= chat.name %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
