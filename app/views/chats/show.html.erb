<body style="overflow: visible;">
    <div>
       <div class="d-flex flex-column">
          <div class="d-flex justify-content-between align-items-center theme-border-bottom px-3">
             <div class="text-center d-md-block flex-grow-1 overflow-hidden">
                <h5 class="mb-0">
                   LLM-UI
                </h5>
             </div>
             <div class="d-flex gap-3 align-items-center position-relative">
                <span>
                   <div class="d-flex align-items-center">
                      <%= Current.user.email_address %>
                   </div>
                </span>
             </div>
          </div>
          <div class="d-flex">
             <div class="d-flex flex-column theme-border-end position-relative" style="height: calc(-50px + 100vh); min-width: 200px; width: 325px; max-width: 600px;">
                <div class="resizer position-absolute top-0 end-0 bottom-0 h-100" style="cursor: col-resize; width: 5px;"></div>
                <div class="d-flex flex-column h-100">
                   <div class="flex-grow-1 overflow-auto">
                      <div class="h-100">
                         <div class="fw-bold m-2 px-2 small cursor-pointer d-flex align-items-center">
                            <span class="ms-2">Previous Chats</span>
                         </div>
                         <div>
                            <div class="d-flex gap-3 justify-content-between mx-1 px-2">
                               <div class="text-truncate flex-grow-1 rounded px-2 py-1 d-flex align-items-center cursor-pointer">
                                 This is an example Chat
                               </div>
                            </div>
                            <% @chats.each do |chat| %>
                              <div class="d-flex gap-3 justify-content-between mx-1 px-2">
                                 <div class="text-truncate flex-grow-1 rounded px-2 py-1 d-flex align-items-center cursor-pointer">
                                    <%= chat.name %>
                                 </div>
                              </div>
                            <% end %>
                         </div>
                      </div>
                   </div>
                </div>
             </div>
             <div class="d-flex flex-column flex-grow-1 mx-auto" style="height: calc(-50px + 100vh);">
                <div class="contained my-auto d-flex align-items-center mx-auto">
                   <div class="mx-2">
                     <% if @chat.new_record? %>
                        <div class="title p-3 d-flex justify-content-center">
                           <i class="bi bi-lightbulb-fill cursor-pointer text-muted me-2">
                           </i>
                           <strong>Examples
                           </strong>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between">
                           <% @examples.each do |example| %>
                              <div class="col-12 col-md-4 d-flex flex-column mb-3">
                                 <div class="theme-bg-secondary rounded px-3 py-2 mx-2 cursor-pointer border-0">
                                    <%= example %>
                                 </div>
                              </div>
                           <% end %>
                        </div>
                     <% end %>
                   
                   </div>
                </div>
                <div class="mx-2">
                   <div class="contained mx-auto w-100 rounded py-2 px-3 theme-border theme-bg-secondary">                      
                      <div class="d-flex">
                         <textarea
                           class="prompt p-0 bg-transparent shadow-none f-normal flex-grow-1 border-0 theme-text-color"
                           id="prompt" 
                           maxlength="100000" 
                           placeholder="Type a question" 
                           style="resize: none; outline: none; height: 24px !important;"
                        ></textarea>
                      </div>
                      <div class="d-flex justify-content-between align-items-center mt-2">
                         <a class="disabled" style="cursor: default;"><span id="sendIcon"><i class="bi-arrow-right fs-5 theme-text-color-muted">Click here to send!</i></span></a>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </div>
 </textarea>
 </body>